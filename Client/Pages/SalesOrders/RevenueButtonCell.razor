@using JINIApp.Shared.Models
@using GridShared.Columns
@implements ICustomGridComponent<SalesOrder>
@inject NavigationManager NavigationManager

<button class='btn btn-sm btn-primary' @onclick="MyClickHandler">Edit</button>

@code { 
    [Parameter]
    public SalesOrder Item { get; set; }

    [Parameter]
    public CGrid<SalesOrder> Grid { get; set; }

    [Parameter]
    public object Object { get; set; }

    private void MyClickHandler(MouseEventArgs e)
    {
        string gridState = Grid.GetState();
        string returnUrl = (string)Object;
        NavigationManager.NavigateTo($"/revenues/Index/{Item.ID.ToString()}/{returnUrl}/{gridState}");
    }
    }